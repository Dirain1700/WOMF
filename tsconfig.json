{
    "compilerOptions": {
        // module settings
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": true,

        // emit settings
        "target": "esnext",
        "rootDir": "./",
        "outDir": "./dist",
        "declaration": true,
        "emitDeclarationOnly": true,
        "lib": ["dom", "dom.iterable", "es2023"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,

        // type checks
        "skipLibCheck": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,
        "strictBindCallApply": true,
        "noPropertyAccessFromIndexSignature": false,
        "typeRoots": ["node_modules/@types", "typed-query-selector/strict"]
    },
    "include": ["js/**/*.ts"],
    "files": ["build.ts", "webpack.config.ts"],
    "exclude": ["node_modules/*"],
    "ts-node": {
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}
